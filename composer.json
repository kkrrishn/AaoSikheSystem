{
  "name": "aaosikhesystem/secure",
  "description": "A lightweight, secure, PSR-compliant PHP 8.2+ MVC framework",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.2.0",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "endroid/qr-code": "^6.0",
    "firebase/php-jwt": "^6.11",
    "phpmailer/phpmailer": "^7.0",
    "picqer/php-barcode-generator": "^3.2",
    "predis/predis": "^3.2",
    "webklex/php-imap": "^6.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "AaoSikheSystem\\": "AaoSikheSystem/core/lib/",
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "platform-check": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse",
    "lint": "phpcs --standard=PSR12 AaoSikheSystem/core/ app/",
    "fix": "phpcbf --standard=PSR12 AaoSikheSystem/core/ app/"
  }
}
